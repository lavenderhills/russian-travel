.lead__caption {
  margin: 8px auto 0;
  width: 77%;
  text-transform: uppercase;
  font-size: 10px;
  line-height: 1.4;
  letter-spacing: 1.5px;
}

@media screen and (max-width: 1024px) {
  .lead__caption {
    width: 91%;
  }
}

@media screen and (max-width: 768px) {
  .lead__caption {
    width: 80%;
    margin: 8px 0 0 24px;
  }
}

@media screen and (max-width: 320px) {
  .lead__caption {
    width: 90%;
    margin: 8px 0 0 16px;
  }
}