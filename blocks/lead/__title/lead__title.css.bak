.lead__title {
  font-size: 96px;
  font-weight: 900;
  margin: 56px auto 0;
  line-height: 1.04;
  text-align: center;
  width: 720px;
}

@media screen and (max-width: 1024px) {
  .lead__title {
    margin: 48px auto 0;
  }
}

@media screen and (max-width: 700px) {
  .lead__title {
    line-height: 1.1;
    width: 100%;
    font-size: 40px;
  }
}
