.cover__subtitle {
  display: block;
  font-size: 18px;
  font-weight: 400;
  line-height: 1.22;
  width: 360px;
  margin: 32px auto 0;
  padding-bottom: 245px;
}

@media screen and (max-width: 1024px) {
  .cover__subtitle {
    padding-bottom: 195px;
  }
}

@media screen and (max-width: 768px) {
  .cover__subtitle {
    padding-bottom: 115px;
  }
}

@media screen and (max-width: 572px) {
  .cover__subtitle {
    font-size: 16px;
    line-height: 1.1;
    margin: 16px auto 0;
  }
}

@media screen and (max-width: 450px) {
  .cover__subtitle {
    font-size: 14px;
    line-height: 1.14;
    width: 265px;
    padding-bottom: 34px;
  }
}