.header__lang-link {
  align-self: end;
  justify-self: start;
  line-height: 1.15;
  font-size: 24px;
  color: white;
  text-decoration: none;
}

@media screen and (max-width: 425px) {
  .header__lang-link {
    align-self: end;
    justify-self: start;
    line-height: 1.1;
    font-size: 18px;
    color: white;
    text-decoration: none;
  }
}