.header {
  padding: 28px 46px 56px;
  display: grid;
  grid-template-columns: 40fr 1fr 1fr;
  column-gap: 18px;
}

@media screen and (max-width: 768px) {
  .header {
    padding: 28px 24px 48px;
    display: grid;
    grid-template-columns: 40fr 1fr 1fr;
    column-gap: 18px;
  }
}

@media screen and (max-width: 320px) {
  .header {
    padding: 16px;
    display: grid;
    grid-template-columns: 40fr 1fr 1fr;
    align-items: end;
  }
}