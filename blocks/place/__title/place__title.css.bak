.place__title {
  margin: 0;
  font-size: 72px;
  line-height: 1.06;
  font-weight: 900;
  align-self: start;
}

@media screen and (max-width: 811px) {
  .place__title {
    font-size: 42px;
    line-height: 1;
  }
}

@media screen and (max-width: 768px) {
  .place__title {
    font-size: 42px;
    line-height: 1;
    width: 90%;
  }
}

@media screen and (max-width: 450px) {
  .place__title {
    font-size: 32px;
    width: 90%;
    margin: 0 auto;
  }
}