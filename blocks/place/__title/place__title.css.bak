.place__title {
  margin: 0;
  width: 460px;
  font-size: 72px;
  line-height: 1.06;
  font-weight: 900;
  align-self: end;
  border: solid red;
}

@media screen and (max-width: 1024px) {
  .place__title {
    margin: 0;
    width: 440px;
  }
}

@media screen and (max-width: 768px) {
  .place__title {
    width: 340px;
    font-size: 42px;
    line-height: 1;
  }
}

@media screen and (max-width: 320px) {
   .place__title {
    width: 288px;
    font-size: 32px;
    line-height: 1;
  }
}