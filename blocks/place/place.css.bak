.place {
  width: 76.975%;
  margin: 80px auto 0;
  display: grid;
  grid-template-columns: 460px 1fr;
  grid-template-rows: auto auto;
  column-gap: 40px;
  grid-row-gap: 48px;
}

.place:first-child {
  margin-top: 0;
}

@media screen and (max-width: 1280px) {
  .place {
    width: 90.625%;
    grid-template-columns: 440px 484px;
    column-gap: 32px;
  }
}

@media screen and (max-width: 1115px) {
  .place {
    width: 90.625%;
    grid-template-columns: 440px auto;
    column-gap: 32px;
  }
}

@media screen and (max-width: 1024px) {
  .place {
    grid-template-columns: 440px 456px;
  }
}

@media screen and (max-width: 1002px) {
  .place {
    margin: 73px auto 0;
    width: 93.75%;
    grid-template-columns: 340px 1fr;
    column-gap: 28px;
  }
}

@media screen and (max-width: 718px) {
  .place {
    margin: 50px auto 0;
    width: 100%;
    display: grid;
    grid-template-columns: auto;
    gap: 32px;
  }
}