.place {
  width: 77%;
  margin: 92px auto 0;
  display: grid;
  grid-template-columns: auto auto;
  grid-template-rows: auto auto;
  column-gap: 40px;
  grid-row-gap: 48px;
    border: solid red;
}

@media screen and (max-width: 1024px) {
  .place {
    width: 91%;
    column-gap: 32px;
  }
}

@media screen and (max-width: 768px) {
  .place {
    width: 94%;
  }
}

@media screen and (max-width: 320px) {
  .place {
    width: 90%;
    display: flex;
    flex-direction: column;
  }
}