.intro {
  width: 77%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  border: solid red;
}

@media screen and (max-width: 1024px) {
  .intro {
    width: 91%;
  }
}

@media screen and (max-width: 768px) {
  .intro {
    width: 94%;
  }
}

@media screen and (max-width: 514px) {
    .intro {
    width: 90%;
  }
}