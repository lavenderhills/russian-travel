.intro {
  width: 76.875%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}

@media screen and (max-width: 1024px) {
  .intro {
    width: 91%;
  }
}

@media screen and (max-width: 768px) {
  .intro {
    width: 93.75%;
  }
}

@media screen and (max-width: 700px) {
    .intro {
    width: 90%;
  }
}