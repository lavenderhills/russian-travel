.intro__title {
  margin: 92px 0 0;
  font-size: 54px;
  line-height: 1;
  font-weight: bold;
  width: 59%;
}

@media screen and (max-width: 768px) {
  .intro__title {
    width: 94%;
    margin: 88px 0 0;
  }
}

@media screen and (max-width: 320px) {
  .intro__title {
    width: 90%;
    margin: 64px 0 0;
    font-size: 32px;
    line-height: 1;
  }
}