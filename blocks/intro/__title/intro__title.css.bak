.intro__title {
  margin: 94px 0 0;
  font-size: 54px;
  line-height: 1.07;
  font-weight: 900;
  width: 690px;
}

@media screen and (max-width: 1024px) {
  .intro__title {
    margin: 92px 0 0;
  }
}

@media screen and (max-width: 768px) {
  .intro__title {
    margin: 90px 0 0;
  }
}

@media screen and (max-width: 572px) {
  .intro__title {
    margin: 64px 0 0;
  }
}

@media screen and (max-width: 450px) {
  .intro__title {
    width: 100%;
    font-size: 32px;
    line-height: 1.09;
    text-align: center;
  }
}